# axis ranges (raise the origin)
xlim <- quantile(df$flipper_length_mm, probs = c(0.02, 0.98), na.rm = TRUE)
ylim <- quantile(df$body_mass_g,        probs = c(0.02, 0.98), na.rm = TRUE)
p <- ggplot(df, aes(
x = flipper_length_mm,
y = body_mass_g,
color = species,
size  = bill_length_mm
)) +
geom_point(alpha = 0.8) +
coord_cartesian(xlim = xlim, ylim = ylim) +
labs(
